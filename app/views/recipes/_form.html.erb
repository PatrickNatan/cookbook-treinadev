<%= form_for @recipe do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <%= f.label :recipe_type_id, 'Tipo da Receita' %>
    <%= f.collection_select :recipe_type_id, RecipeType.all, :id, :name %>
    <%= f.label :cuisine%>
    <%= f.text_field :cuisine%>
    <%= f.label :difficulty%>
    <%= f.text_field :difficulty%>
    <%= f.label :cook_time%>
    <%= f.number_field :cook_time%>
    <%= f.label :ingredients%>
    <%= f.text_area :ingredients%>
    <%= f.label :cook_method %>
    <%= f.text_area :cook_method%>
    <%= f.label :recipe_img %>
    <%= f.file_field :recipe_img%>
    <%= f.submit 'Enviar' %>
  <% end %>
