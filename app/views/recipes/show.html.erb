    <%= f.label :list_id, 'Adicionar a lista:' %>
    <%= f.collection_select :list_id,@lists, :id, :name %>
    <%= f.hidden_field :recipe_id, value: params[:id] %>
    <%= f.submit 'Adicionar' %></p>
  <% end %>
<%end%>

